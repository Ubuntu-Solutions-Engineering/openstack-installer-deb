#!/bin/sh
set -e
if [ ! -d /var/log/openstack ]; then
   mkdir -p /var/log/openstack
fi

ln -sf /usr/share/openstack/uoi-rsyslog.conf /etc/rsyslog.d/99-uoi.conf

if [ -f /bin/upstart ]; then
    service rsyslog restart || true
fi
if [ -f /bin/systemctl ]; then
    systemctl restart rsyslog || true
fi

#DEBHELPER#
